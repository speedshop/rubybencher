<%= turbo_frame_tag "tasks_frame" do %>
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <h3 class="text-xl font-semibold mb-4">Task Statistics</h3>
    <div class="grid grid-cols-3 md:grid-cols-6 gap-4">
      <div class="text-center">
        <p class="text-3xl font-bold"><%= @task_stats[:total] %></p>
        <p class="text-gray-600">Total</p>
      </div>
      <div class="text-center">
        <p class="text-3xl font-bold text-gray-500"><%= @task_stats[:pending] %></p>
        <p class="text-gray-600">Pending</p>
      </div>
      <div class="text-center">
        <p class="text-3xl font-bold text-blue-500"><%= @task_stats[:claimed] %></p>
        <p class="text-gray-600">Claimed</p>
      </div>
      <div class="text-center">
        <p class="text-3xl font-bold text-yellow-500"><%= @task_stats[:running] %></p>
        <p class="text-gray-600">Running</p>
      </div>
      <div class="text-center">
        <p class="text-3xl font-bold text-green-500"><%= @task_stats[:completed] %></p>
        <p class="text-gray-600">Completed</p>
      </div>
      <div class="text-center">
        <p class="text-3xl font-bold text-red-500"><%= @task_stats[:failed] %></p>
        <p class="text-gray-600">Failed</p>
      </div>
    </div>

    <% if @task_stats[:total] && @task_stats[:total] > 0 %>
      <% finished = @task_stats[:completed] + @task_stats[:failed] %>
      <% progress_pct = (finished * 100.0 / @task_stats[:total]).round(1) %>
      <div class="mt-6">
        <div class="flex justify-between mb-1">
          <span class="text-sm font-medium text-gray-700">Overall Progress</span>
          <span class="text-sm font-medium text-gray-700"><%= finished %>/<%= @task_stats[:total] %> (<%= progress_pct %>%)</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-4">
          <div class="bg-green-600 h-4 rounded-full" style="width: <%= progress_pct %>%"></div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-xl font-semibold mb-4">Tasks</h3>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Provider</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Instance Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Run #</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Progress</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Current Benchmark</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Runner ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Heartbeat</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @tasks.each do |task| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= task.id %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= task.provider %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= task.instance_type %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= task.run_number %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="<%= task_status_badge_class(task.status) %>">
                  <%= task.status.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if task.progress_pct %>
                  <div class="flex items-center">
                    <div class="w-full bg-gray-200 rounded-full h-2.5 mr-2">
                      <div class="bg-blue-600 h-2.5 rounded-full<%= ' progress-bar-animated' if task.status == 'running' %>" style="width: <%= task.progress_pct %>%"></div>
                    </div>
                    <span><%= task.progress_pct %>%</span>
                  </div>
                <% else %>
                  -
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= task.current_benchmark || '-' %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 font-mono"><%= task.runner_id&.truncate(12) || '-' %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= task.heartbeat_at ? time_ago_in_words(task.heartbeat_at) + ' ago' : '-' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

<% end %>
